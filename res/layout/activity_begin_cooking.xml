<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f26522"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BeginCookingActivity" >

    <Chronometer
        android:id="@+id/cooking_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="Chronometer"
        android:textSize="80sp" />

    <Button
        android:id="@+id/cooking_startNext"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:onClick="speakText"
        android:background="#342016"
        android:text="Start Cooking" />

    <TextView
        android:id="@+id/cooking_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cooking_timer"
        android:layout_centerHorizontal="true"
        android:text="Steps"
        android:textColor="#342016"
        android:textSize="40sp" />

    <Button
        android:id="@+id/cooking_end"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cooking_startNext"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="#342016"
        android:onClick="stopCook"
        android:text="Stop Cooking" />

</RelativeLayout>